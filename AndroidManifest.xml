<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ux_feedback"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ux_feedback.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ux_feedback.SurveyPopup_Method1"
            android:label="@string/title_activity_survey_popup__method1" >
        </activity>
        <activity
            android:name="com.example.ux_feedback.SurveyPopup_Method2"
            android:label="@string/title_activity_survey_popup__method2" >
        </activity>

        <receiver android:name="com.example.ux_feedback.UXBroadcastReceiver" >
            <intent-filter>
                <action android:name="ACTION_MEASURE_UX" >
                </action>
            </intent-filter>
        </receiver>

        <activity
            android:name="com.example.ux_feedback.Survey_method1_part1"
            android:label="@string/title_activity_survey_method1_part1" >
        </activity>
        <activity
            android:name="com.example.ux_feedback.Survey_method1_part2"
            android:label="@string/title_activity_survey_method1_part2" >
        </activity>
        <activity
            android:name="com.example.ux_feedback.Survey_method1_part3"
            android:label="@string/title_activity_survey_method1_part3" >
        </activity>
    </application>

</manifest>