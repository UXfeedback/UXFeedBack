<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SurveyPopup_Method1" >
    
    <!-- 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Survey - Part One"
        android:paddingBottom="10dp"
        />
     -->
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:id="@+id/m1_q1_layout" >
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/m1_q1" />
    	<TextView
    	    android:paddingLeft="5dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/m1_q1_field" 
        	android:text="1"
        	/>
    </LinearLayout>
    <SeekBar
        android:layout_below="@id/m1_q1_layout"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:max="6"
    	android:id="@+id/m1_q1_seekBar" />
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/m1_q1_seekBar"
    	android:id="@+id/m1_q2_layout">
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/m1_q2" />
    	<TextView
    	    android:paddingLeft="5dp"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/m1_q2_field"
        	android:text="1" 
        	/>        
    </LinearLayout>
    <SeekBar
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:max="6"    	
    	android:id="@+id/m1_q2_seekBar"
    	android:layout_below="@id/m1_q2_layout" />

<LinearLayout    
    android:id="@+id/tmp_layout1"
    android:orientation="vertical"
    android:layout_below="@id/m1_q2_seekBar"    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    	<RelativeLayout
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content" >
    	    <TextView
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content" 
    	    android:text="Left value"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentTop="true"/> 
    	 	<TextView
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content" 
    	    android:text="Right value"
    	    android:layout_alignParentRight="true"
    	    android:layout_alignParentTop="true"/>    	    
    	</RelativeLayout> 
    	<RadioGroup	   
    	    android:orientation="horizontal"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content">
    	    <RadioButton android:layout_weight="1" />
    	    <RadioButton android:layout_weight="1" />    	    
    	    <RadioButton android:layout_weight="1" />
    	    <RadioButton android:layout_weight="1" />
    	    <RadioButton android:layout_weight="1" />
    	    <RadioButton android:layout_weight="1" />
    	    <RadioButton android:layout_weight="1" />    	    
    	</RadioGroup>    	 
</LinearLayout>
<LinearLayout
    android:layout_below="@id/tmp_layout1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <RelativeLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content" >
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:text="Left value" />
        <TextView
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content" 
    	    android:text="Right value"
    	    android:layout_alignParentRight="true"
    	    android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <SeekBar
        
        android:progressDrawable="@drawable/progress_bar"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:max="6" />
</LinearLayout>

    

</RelativeLayout>
